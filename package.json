{
  "name": "ts-type-tester",
  "version": "0.2.0",
  "description": "Test all your type-tests and incorporate into your CI-CD and deployment strategy",
  "scripts": {
    "build": "tsup src/ts-test.ts --format=esm -d bin --clean --sourcemap && chmod +x \"bin/ts-test.mjs\"",
    "test": "node ./bin/ts-test.mjs",
    "release": "bumpp"
  },
  "bin": {
    "ts-test": "bin/ts-test.mjs",
    "ts-type-tester": "bin/ts-test.mjs"
  },
  "keywords": [
    "typescript",
    "testing"
  ],
  "tsup": {
    "entry": [
      "src/ts-test.ts"
    ],
    "splitting": false,
    "sourcemap": true,
    "format": "esm",
    "clean": true
  },
  "author": "Ken Snyder <ken@ken.net>",
  "license": "MIT",
  "dependencies": {
    "chalk": "^5.3.0",
    "command-line-args": "^5.2.1",
    "command-line-usage": "^7.0.1",
    "fast-glob": "^3.3.2",
    "inferred-types": "^0.42.1",
    "pathe": "^1.1.2",
    "ts-morph": "^22.0.0",
    "typescript": "^5.4.3",
    "watcher": "^2.3.0",
    "xxhash-wasm": "^1.0.2"
  },
  "devDependencies": {
    "@type-challenges/utils": "^0.1.1",
    "@types/command-line-args": "^5.2.3",
    "@types/command-line-usage": "^5.0.4",
    "@types/node": "^18.19.26",
    "bumpp": "^9.4.0",
    "tsup": "^8.0.2",
    "vitest": "^1.4.0"
  }
}
